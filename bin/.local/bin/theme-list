#!/bin/bash
# List available themes
# Usage: theme-list

THEMES_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/themes"

find -L "$THEMES_DIR" -mindepth 1 -maxdepth 1 -type d ! -name current -exec basename {} \; | sort | \
    awk -F'-' '{for(i=1;i<=NF;i++) $i=toupper(substr($i,1,1)) substr($i,2)} 1' OFS=' '
